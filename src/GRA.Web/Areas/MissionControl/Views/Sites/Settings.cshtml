@model GRA.Controllers.ViewModel.MissionControl.Sites.SiteSettingsViewModel

@Html.Partial("_SitePartial")

<div asp-validation-summary="ModelOnly"></div>
<form asp-controller="Sites" asp-action="Settings" method="post" role="form">
    <input asp-for="Id" type="hidden" />

    @for (int i = 0; i < Model.SiteSettingGroups.Count; i++)
    {
        <h2>@Model.SiteSettingGroups[i].Name</h2>

        @for (int j = 0; j < Model.SiteSettingGroups[i].SiteSettings.Count; j++)
        {
            <input asp-for="SiteSettingGroups[i].SiteSettings[j].Key" type="hidden" />

            <div class="row row-spacing">
                <div class="col-xs-12">
                    <label asp-for="SiteSettingGroups[i].SiteSettings[j].Value">@Model.SiteSettingGroups[i].SiteSettings[j].Name</label>
                    <span class="fa fa-question-circle-o wide-tooltip" title="@Model.SiteSettingGroups[i].SiteSettings[j].Info" data-toggle="tooltip" data-placement="top"></span>
                    @if (Model.SiteSettingGroups[i].SiteSettings[j].Format == GRA.Domain.Model.SiteSettingFormat.Boolean)
                    {
                        <select asp-for="SiteSettingGroups[i].SiteSettings[j].Value" class="form-control">
                            <option></option>
                            <option value="True">Yes</option>
                        </select>
                    }
                    else if (Model.SiteSettingGroups[i].SiteSettings[j].Format == GRA.Domain.Model.SiteSettingFormat.Integer)
                    {
                        <input asp-for="SiteSettingGroups[i].SiteSettings[j].Value" type="number" class="form-control" autocomplete="off" />
                    }
                    <span asp-validation-for="SiteSettingGroups[i].SiteSettings[j].Value" class="text-danger"></span>
                </div>
            </div>
        }
        <hr />
    }

    <div class="form-group">
        <a asp-action="Index" class="btn btn-default">Return to List</a>
        <button type="submit" id="Submit" name="Submit" value="Submit" class="btn btn-primary btn-spinner">
            <span class="buttonText">Save</span>
            <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
        </button>
    </div>
</form>