@model GRA.Controllers.ViewModel.MissionControl.SystemInformationViewModel
<div class="row">
    <div class="col-xs-12 col-sm-3">
        <img src="@Model.SiteLogoUrl"
             class="img-responsive" />
    </div>
    <div class="col-xs-12 col-sm-9">
        <p class="lead" style="margin-top: 3rem;"><strong>Version:</strong> @Model.Version</p>
        <p class="lead"><strong>Database version:</strong> @Model.Migration</p>
        @if (!string.IsNullOrEmpty(Model.Instance))
        {
            <p class="lead"><strong>Instance:</strong> @Model.Instance</p>
        }
        @if (!string.IsNullOrEmpty(Model.Deploy))
        {
            <p class="lead"><strong>Deployed:</strong> @Model.Deploy</p>
        }
    </div>
    <div class="col-xs-12 col-sm-6">
        <h3>Versions</h3>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Version</th>
                </tr>
            </thead>
            <tbody>
                <tr class="info">
                    <td>@Model.Assembly</td>
                    <td>@Model.Version</td>
                </tr>
                @foreach (var key in Model.Assemblies.Keys)
                {
                    <tr>
                        <td>@key</td>
                        <td>@Model.Assemblies[key]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h3>Settings</h3>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Setting</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var key in Model.Settings.Keys)
                {
                    <tr>
                        <td>@key</td>
                        <td>@Model.Settings[key]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
