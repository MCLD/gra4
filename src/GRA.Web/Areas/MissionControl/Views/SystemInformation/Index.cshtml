@model Tuple<string, string, string, Dictionary<string, string>>
<div class="row">
    <div class="col-xs-12 col-sm-3">
        <img src="~/images/great-reading-adventure-logo@1x.png"
             class="img-responsive" />
    </div>
    <div class="col-xs-12 col-sm-9">
        <p class="lead" style="margin-top: 3rem;"><strong>Version:</strong> @Model.Item2</p>
        <p class="lead"><strong>Database version:</strong> @Model.Item3</p>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Version</th>
                </tr>
            </thead>
            <tbody>
                <tr class="info">
                    <td>@Model.Item1</td>
                    <td>@Model.Item2</td>
                </tr>
                @foreach (var key in Model.Item4.Keys)
                {
                    <tr>
                        <td>@key</td>
                        <td>@Model.Item4[key]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
