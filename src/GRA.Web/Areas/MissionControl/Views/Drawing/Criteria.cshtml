@model GRA.Controllers.ViewModel.MissionControl.Drawing.CriterionListViewModel

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        <a asp-action="Index" class="btn btn-default">Drawings</a>
        <a asp-action="CriteriaCreate" class="btn btn-primary">Create Criteria</a>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div style="font-size:large;padding-top:10px;">Created By:</div>
        <ul class="nav nav-pills" style="padding: 10px 0;">
            <li class="@(Model.Mine == true ? "" : "active")"><a asp-route-Search="@Model.Search">All</a></li>
            <li class="@(Model.Mine == true ? "active" : "")"><a asp-route-Search="@Model.Search" asp-route-Mine="True">Mine</a></li>
        </ul>
    </div>
</div>

<form asp-controller="Drawing" asp-action="Criteria" method="get" role="form">
    @if (Model.Mine == true)
    {
        <input asp-for="Mine" type="hidden" />
    }

    <div class="row row-spacing">
        <div class="col-xs-8">
            <input asp-for="Search" class="form-control" />
        </div>
        <div class="col-xs-4">
            <input type="submit" value="Search" class="btn btn-default" style="margin-right: 8px;" />
            <a asp-action="Criteria" asp-route-Mine="@Model.Mine" class="btn btn-default">Clear</a>
        </div>
    </div>
</form>

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        @if (Model.Criteria.Count() == 0)
        {
            <div class="alert alert-warning">No Criteria</div>
        }
        else
        {
            <div>
                <table class="table table-condensed table-bordered link-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>System</th>
                            <th>Branch</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var criterion in Model.Criteria)
                        {
                            <tr>
                                <td class="td-class">
                                    <a asp-action="CriteriaDetail" asp-route-id="@criterion.Id" class="rowlink">
                                        @criterion.Name
                                    </a>
                                </td>
                                <td>@criterion.SystemName</td>
                                <td>@criterion.BranchName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.PaginateModel.MaxPage > 1)
            {
                <paginate paginateModel="@Model.PaginateModel"></paginate>
            }
        }
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function() {
            $('.td-class').each(function() {
                $(this).children('a.rowlink').height($(this).height() + 11);
            });
        });
        $(window).resize(function() {
            $('.td-class').each(function() {
                $(this).children('a.rowlink').height($(this).height() + 11);
            });
        });
    </script>
}