@model GRA.Controllers.ViewModel.Participants.PasswordResetViewModel

@Html.Partial("_ParticipantPartial")



@if (!Model.HasAccount)
{
    <div class="row" style="padding: 10px 0;">
        <div class="col-xs-12">
            <div class="alert alert-warning">Participant does not have an individual account</div>
        </div>
    </div>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-default">Return to Participants</a>
    </div>
}
else
{
    <form asp-controller="Participants" asp-action="PasswordReset" method="post" role="form">
        <div class="row" style="padding: 10px 0;">
            <div class="col-xs-12">
                <input asp-for="Id" type="hidden" />
                <input asp-for="HouseholdCount" type="hidden" />
                <input asp-for="HeadOfHouseholdId" type="hidden" />
                <input asp-for="HasAccount" type="hidden" />
                <div class="row row-spacing">
                    <div class="col-xs-12">
                        <label asp-for="NewPassword" class="control-label"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <a asp-action="Index" class="btn btn-default">Return to Participants</a>
            <button type="submit" class="btn btn-primary">Reset Password</button>
        </div>
    </form>
}

