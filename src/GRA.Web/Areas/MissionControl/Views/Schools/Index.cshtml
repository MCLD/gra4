@model GRA.Controllers.ViewModel.MissionControl.Schools.SchoolsListViewModel

@Html.Partial("_SchoolsPartial")

<div class="row">
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="deleteModalLabel">Delete school</h4>
                </div>
                <div class="modal-body">
                    <span class="fa fa-exclamation-triangle" aria-hidden="true"></span>
                    <span id="modal-text"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-right: 1em;">Cancel</button>
                    <form asp-controller="Schools" asp-action="DeleteSchool" method="post" role="form" style="display:inline">
                        <input id="Id" name="Id" type="hidden" />
                        <button type="submit" class="btn btn-danger pull-right" aria-label="Confirm">
                            <span class="fa fa-remove" aria-hidden="true"></span>
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        <a asp-action="AddSchool" class="btn btn-default">Add a School</a>
    </div>
</div>

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        @if (Model.Schools.Count() == 0)
        {
            <div class="alert alert-warning">No Schools</div>
        }
        else
        {
            <div>
                <form asp-controller="Schools" method="post" role="form">
                    <table class="table table-condensed table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>District</th>
                                <th>Type</th>
                                <th width="100">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Schools.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input asp-for="Schools[i].Id" class="form-control" type="hidden" />
                                        <input asp-for="Schools[i].Name" class="form-control nameInput" />
                                        <span asp-validation-for="Schools[i].Name" class="text-danger"></span>
                                    </td>
                                    <td>
                                        <select asp-for="Schools[i].SchoolDistrictId" asp-items="Model.SchoolDistricts" class="form-control districtInput">
                                        </select>
                                        <span asp-validation-for="Schools[i].SchoolDistrictId" class="text-danger"></span>
                                    </td>
                                    <td>
                                        <select asp-for="Schools[i].SchoolTypeId" asp-items="Model.SchoolTypes" class="form-control typeInput">
                                        </select>
                                        <span asp-validation-for="Schools[i].SchoolTypeId" class="text-danger"></span>
                                    </td>
                                    <td>
                                        <button type="submit"
                                                asp-action="EditSchool"
                                                asp-route-listId="@i"
                                                class="btn btn-primary btn-xs editSchool">
                                            <span class="fa fa-2x fa-save" aria-hidden="true"></span>
                                        </button>
                                        <button type="button"
                                                class="btn btn-danger btn-xs"
                                                style="margin-left:16px;"
                                                data-toggle="modal"
                                                data-target="#deleteModal"
                                                data-id="@Model.Schools[i].Id"
                                                data-name="@Model.Schools[i].Name">
                                            <span class="fa fa-2x fa-remove" aria-hidden="true"></span>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </form>
            </div>
            @if (Model.PaginateModel.MaxPage > 1)
            {
                <paginate paginateModel="@Model.PaginateModel"></paginate>
            }
        }
    </div>
</div>

@section scripts
{
    <script>
        $.validator.setDefaults({
            ignore: ".ignore"
        });

        $('.editSchool').on('click', function() {
            $('.nameInput').addClass('ignore');
            $('.districtInput').addClass('ignore');
            $('.typeInput').addClass('ignore');
            $(this).parent().siblings().children("input, select").removeClass('ignore');
        });

        $('#deleteModal').on('show.bs.modal', function(event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var name = button.data('name');
            var modal = $(this);
            modal.find('#modal-text').text('Are you sure you wish to delete the school "' + name + '" ?');
            modal.find('#Id').val(id);
        })
    </script>
}