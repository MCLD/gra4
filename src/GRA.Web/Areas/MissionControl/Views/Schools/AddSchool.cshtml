@model GRA.Controllers.ViewModel.MissionControl.Schools.SchoolsAddViewModel

<form asp-controller="Schools" asp-action="AddSchool" method="post" role="form">
    <div class="row row-spacing">
        <div class="col-xs-12">
            <label asp-for="School.Name" class="control-label"></label>
            <input asp-for="School.Name" class="form-control" />
            <span asp-validation-for="School.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-xs-12">
            <label asp-for="School.SchoolDistrictId" class="control-label"></label>
            <select asp-for="School.SchoolDistrictId" asp-items="Model.SchoolDistricts" class="form-control districtInput">
                <option></option>
            </select>
            <span asp-validation-for="School.SchoolDistrictId" class="text-danger"></span>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-xs-12">
            <label asp-for="School.SchoolTypeId" class="control-label"></label>
            <select asp-for="School.SchoolTypeId" asp-items="Model.SchoolTypes" class="form-control districtInput">
                <option></option>
            </select>
            <span asp-validation-for="School.SchoolTypeId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-default">Return to School List</a>
        <button type="submit" class="btn btn-primary btn-spinner">
            <span class="buttonText">Add School</span>
            <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
        </button>
    </div>
</form>