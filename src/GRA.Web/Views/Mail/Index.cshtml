@model GRA.Controllers.ViewModel.Mail.MailListViewModel

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        @if (Model.Mail.Count() == 0)
        {
            <div class="alert alert-warning">No Mail</div>
        }
        else
        {
            <div>
                <table class="table table-condensed table-bordered">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Subject</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var mail in Model.Mail)
                        {
                            <tr class="@(mail.IsNew ? "unread-mail" : "read-mail")">
                                <td>@mail.CreatedAt.ToString("d")</td>
                                <td>@mail.Subject</td>
                                <td>
                                    <form asp-controller="Mail" asp-action="Read" method="post" role="form">
                                        <input name="id" value="@mail.Id" type="hidden"/>
                                        <button type="submit"class="btn btn-default btn-xs">
                                            Read
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.PaginateModel.MaxPage > 1)
            {
                <paginate paginateModel="@Model.PaginateModel"></paginate>
            }
        }
    </div>
</div>
