@model GRA.Controllers.ViewModel.DashboardViewModel

<div class="row" style="font-size: larger;">
    <div class="col-sm-3" style="text-align: center;">
        <p><span class="fa fa-user" style="font-size: 10em;"></span><br /></p>
        <p style="font-size: x-large;">You have <strong>@Model.CurrentPointTotal points</strong>.</p>
        <p>See your <a asp-controller="Profile" asp-action="History">activity history</a>.</p>
    </div>
    <div class="col-sm-6">
        <p style="text-align: center; font-size: x-large;">Welcome <strong>@Model.FirstName!</strong></p>
        <div class="well">
            <form asp-controller="Home" asp-action="LogBook" method="post" role="form">
                <div class="row row-spacing">
                    <div class="col-xs-12">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="row row-spacing">
                    <div class="col-xs-12">
                        <label asp-for="Author" class="control-label"></label>
                        <input asp-for="Author" class="form-control" />
                    </div>
                </div>

                <button type="submit" class="btn center-block btn-primary btn-lg btn-spinner-no-validate">
                    <span class="buttonText">I read a book!</span>
                    <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                </button>
            </form>
        </div>
    </div>
    <div class="col-sm-3" style="text-align: center;">
        <p>Your badges</p>
        <div class="row">
            <div class="col-sm-4"><span class="fa fa-certificate" style="font-size: 4em;"></span></div>
            <div class="col-sm-4"><span class="fa fa-plane" style="font-size: 4em;"></span></div>
            <div class="col-sm-4"><span class="fa fa-calendar" style="font-size: 4em;"></span></div>
            <div class="col-sm-4"><span class="fa fa-book" style="font-size: 4em;"></span></div>
            <div class="col-sm-4"><span class="fa fa-cloud" style="font-size: 4em;"></span></div>
        </div>
    </div>
</div>